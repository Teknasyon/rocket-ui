{
  "include": ["src/**/*.ts", "src/**/*.d.ts", "src/**/*.tsx", "src/**/*.vue", "src/shims.d.ts"],
  "compilerOptions": {
    "target": "esnext",
    "module": "esnext",
    "moduleResolution": "node",
    "jsx": "preserve",
    "types": ["vitest/globals", "vite/client", "node", "jsdom"],
    "composite": true,
    "lib": ["esnext", "dom"],
    "importHelpers": true,
    "outDir": "dist",
    "strict": true,
    "allowJs": true,
    "sourceMap": true,
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "experimentalDecorators": true,
    "baseUrl": ".",
    "paths": {
      "@/*": ["./src"]
    },
    "declaration": true,
    "declarationDir": "dist/types",
    "emitDeclarationOnly": true
  }
}
